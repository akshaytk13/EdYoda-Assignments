class calculator :
    def __init__(self,num1,num2):
        self.num1 = num1
        self.num2 = num2
    
    def add(self):
        addition = self.num1+self.num2 
        return addition
    
    def subtract(self):
        subtraction = self.num2-self.num1
        return subtraction
    
    def multiply(self):
        multi = self.num1*self.num2
        return multi
    
    def divide(self):
        division = self.num2/self.num1
        return division

s1 = int(input("Enter the first number: "))
s2 = int(input("Enter the second number: "))

obj = calculator(s1,s2)
print(obj.add())
print(obj.subtract())
print(obj.multiply())
print(obj.divide())
